<!DOCTYPE html>
<html>
  <head>
    <title>SessionApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <% if current_user %>
      login_user: <%= link_to @current_user.name, user_path(@current_user.id) %><br>
      <%= link_to 'ログアウト', session_path(id: @current_user.id), method: :delete %>
    <% else %>
      <%= link_to 'ログイン', new_session_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
